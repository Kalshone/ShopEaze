<!-- res/layout/item_store.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="186dp"
        android:background="@drawable/product_tile_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="10dp">


        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="@string/shopeaze_logo"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner_imageview"
            android:clipToOutline="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/sample" />

            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:singleLine="true"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/red_hat_display"/>

            <TextView
                android:id="@+id/textViewProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textColor="@color/light_gray"
                android:textStyle="bold"
                android:fontFamily="@font/red_hat_display"/>

    </LinearLayout>

</RelativeLayout>
